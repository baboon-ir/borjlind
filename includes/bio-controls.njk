<div class="sticky top-[98px] z-40 mt-6 rb-controls">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <form class="flex items-center gap-2" data-jump-form>
      <label class="text-xs font-mono text-light/60" for="page">Hoppa</label>
      <input class="rb-input" id="page" name="page" type="number" min="1" max="276" placeholder="t.ex. 12" />
      <button class="rb-btn" type="submit">Go</button>
    </form>

    <div class="flex items-center gap-2">
      <button class="rb-btn" type="button" data-continue hidden>Continue</button>
      <button class="rb-btn" type="button" data-top>Top</button>
    </div>
  </div>
</div>
