---
layout: base.njk
---
<section class="card p-6">
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div>
      <h1 class="text-xl font-semibold tracking-tight">{{ title }}</h1>
      {% if period %}<div class="mt-1 text-xs font-mono text-zinc-500">{{ period }}</div>{% endif %}
    </div>
    <a class="btn" href="/minnen/">Tillbaka</a>
  </div>

  {% if teaser %}<p class="mt-4 text-sm text-zinc-300">{{ teaser }}</p>{% endif %}

  <div class="mt-6 prose-dark">
    {{ content | safe }}
  </div>
</section>
