{
  "name": "rolfborjlind-site",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:11ty": "eleventy --serve --watch",
    "dev:css": "tailwindcss -i assets/css/tailwind.css -o assets/css/main.css --watch",
    "build": "npm-run-all build:*",
    "build:css": "tailwindcss -i assets/css/tailwind.css -o assets/css/main.css --minify",
    "build:11ty": "eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.10"
  }
}
