<!doctype html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "Rolf Börjlind" }}</title>
    <meta name="description" content="{{ teaser or description or "Rolf Börjlind – biografi" }}" />
    <link rel="stylesheet" href="/assets/css/main.css" />
  </head>
  <body class="min-h-screen font-serif {{ bodyClass or 'bg-dark text-light' }} flex flex-col">
    {% include "header.njk" %}

    <main class="flex-1 relative z-10 w-full {% if mainClass == 'h-full' %}flex items-center justify-center{% endif %}">
      <div class="{{ mainClass or 'mx-auto max-w-5xl' }}">
        {{ content | safe }}
      </div>
    </main>

    <footer class="mt-auto relative z-10">
      {% include "footer.njk" %}
    </footer>

    <script src="/assets/js/nav.js" defer></script>
    <script src="/assets/js/bio-reader.js" defer></script>
  </body>
</html>
