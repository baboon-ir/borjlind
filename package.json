{
  "name": "borjlind",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:11ty": "eleventy --serve --watch",
    "dev:css": "tailwindcss -i src/assets/tailwind.css -o _site/assets/main.css --watch",
    "build": "npm-run-all build:*",
    "build:css": "tailwindcss -i src/assets/tailwind.css -o _site/assets/main.css --minify",
    "build:11ty": "eleventy",
    "split:biografi": "node scripts/split-biografi.mjs"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.10",
    "@tailwindcss/typography": "^0.5.15"
  }
}
