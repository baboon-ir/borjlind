<!doctype html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "Rolf Börjlind" }}</title>
    <meta name="description" content="{{ description or "Rolf Börjlind – biografi" }}" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/assets/main.css" />
  </head>
  <body class="min-h-screen" data-page="{{ pageId or '' }}">
    <header class="sticky top-0 z-50 border-b border-zinc-900 bg-black/70 backdrop-blur">
      <div class="mx-auto flex max-w-5xl items-center justify-between gap-6 px-4 py-3">
        <a class="no-underline" href="/">
          <div class="flex items-center gap-3">
            <div class="h-8 w-8 rounded-xl border border-zinc-800 bg-zinc-950"></div>
            <div>
              <div class="text-sm font-semibold tracking-wide">Rolf Börjlind</div>
              <div class="text-xs text-zinc-400">biografi</div>
            </div>
          </div>
        </a>
        <nav class="flex items-center gap-4 text-sm text-zinc-300">
          <a class="no-underline hover:text-white" href="/biografi/">Biografi</a>
          <a class="no-underline hover:text-white" href="/minnen/">Minnen</a>
          <a class="no-underline hover:text-white" href="/appendix/">Appendix</a>
        </nav>
      </div>
    </header>

    <main class="mx-auto max-w-5xl px-4 py-10">
      {{ content | safe }}
    </main>

    <footer class="border-t border-zinc-900 py-10">
      <div class="mx-auto max-w-5xl px-4 text-xs text-zinc-500">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div>© <span id="year"></span> – MVP</div>
          <div class="font-mono">Eleventy + Tailwind</div>
        </div>
      </div>
    </footer>

    <script>document.getElementById('year').textContent = new Date().getFullYear();</script>
    <script src="/assets/site.js" defer></script>
  </body>
</html>
